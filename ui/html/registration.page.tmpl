{{template "base.auth" .}}
 
{{define "title"}}Домашняя страница{{end}}
 
{{define "main"}}
<div class="mx-auto">
<div class="flex">
<div class="basis-1/3 ml-auto mr-12 rounded-lg border-zink-100 px-8 py-2 my-4">
</div> 
<div class=" basis-1/3 bg-white rounded-lg border-zink-100 my-4 mr-44 px-4 shadow">
        <div class="flex flex-col items-center justify-center px-6 mx-auto py-0">
            <div class="w-full rounded-lgxl:p-0">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl leading-tight tracking-tight text-indigo-300 md:text-2xl dark:text-white">
                        Добро пожаловать 
                    </h1>
                    <form class="space-y-4 md:space-y-6 " action="registration" method="post">
                        <div>
                            <input type="email" name="email" id="email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="fromshibuya@mail" required="">
                        </div>
                        <div>
                            <input type="password" name="password1" id="password1" placeholder="Пароль" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required="">
                            <br>  
                            <input type="password" name="password2" id="password2" placeholder="Повторите пароль" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required="">
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-start">
                                <div class="flex items-center h-5">
                                  <input id="remember" aria-describedby="remember" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800">
                                </div>
                                <div class="ml-3 text-sm">
                                  <label for="remember" class="text-gray-500 dark:text-gray-300">Запомнить меня</label>
                                </div>
                            </div>
                            <a href="#" class="text-sm font-medium text-indigo-500 hover:underline dark:text-primary-500">Восстановать пароль</a>
                        </div>
                        <button type="submit" class="w-full text-indigo-500 border border-indigo-500  bg-primary-600 hover:bg-indigo-200 hover:border-indigo-200 hover:shadow font-medium rounded-lg text-sm px-5 py-2.5 text-center">Войти</button>
                        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                            У вас есть аккаунт ? <a href="http://127.0.0.1:4000/auth" class="font-medium text-indigo-500 hover:underline">Войти</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
</div>
    </div>
</div>
{{end}}